<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>
    <ul>
    <% @student.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :sid, "SID:" %><br />
    <%= f.text_field :sid %>
  </div>
  <div class="field">
    <%= f.label :first_name, "First name:" %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name, "Last name:" %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :cp, "Credit Points:" %><br />
    <%= f.select :cp, options_for_select(@cp, {:selected => @student.cp}) %>
  </div>
  <div class="field">
    <%= f.label :email, "Email:" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone, "Phone (Optional):" %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :comments, "Comment (Optional):" %><br />
    <%= f.text_area :comments, :rows => 5, :columns => 30 %>
  </div>
  <% if params[:id].nil? %>
  <div class="field">
    <%= f.label :password, "Password:" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= check_box :current_semester, "selected", { :checked => true } %>
    <%= label :current_semester, "selected", "Add to current semester" %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

