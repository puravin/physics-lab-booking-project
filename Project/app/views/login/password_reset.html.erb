<!DOCTYPE html>
<html>
<head>
  <title>3rd Year Lab Booking System Login</title>
<!-- START:stylesheet -->
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "lab3b", :media => "all" %>
<!-- END:stylesheet -->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<body id="document-body">
  <div id="login">
    <h1>Change Admin Password</h1>

<%= form_tag("password_reset_update", :method => "post") do |f| %>
  <% if not params[:error].nil? %>
    <div id="errorExplanation">
      <h2><%= params[:error] %></h2>
    </div>
  <% end %>
  
  <% if params[:notice] %>
    <p class="notice"><%= params[:notice] %></p>
  <% end %>
  
  <div class="field">
    <%= label_tag(:new_password, "New password:") %>
    <%= password_field_tag(:new_password) %>
    <br />
    <%= label_tag(:confirm_password, "Confirm password:") %>
    <%= password_field_tag(:confirm_password) %>
  </div>
  <%= hidden_field_tag("username", @username) %>
  <%= hidden_field_tag("token", @token) %>
  <div class="actions">
    <%= submit_tag("Update") %>
  </div>
<% end %>
  </div>
</body>
</html>
  

