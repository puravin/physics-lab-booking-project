<%= form_for(@experiment) do |f| %>
  <% if @experiment.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@experiment.errors.count, "error") %> prohibited this experiment from being saved:</h2>
    <ul>
    <% @experiment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :exp_num, "Experiment number:" %><br />
    <%= f.text_field :exp_num, :size => 3, :maxlength => 255 %>
  </div>
  <div class="field">
    <%= f.label :name, "Experiment name:"%><br />
    <%= f.text_field :name, :size => 40, :maxlength => 255 %>
  </div>
  <div class="field">
    <%= f.label :extended_name, "Extended name (optional):" %><br />
    <%= f.text_field :extended_name, :size => 40, :maxlength => 255 %>
  </div>
  <div class="field">
    <%= f.label :num_sessions, "Number of sessions:" %><br />
    <%= f.text_field :num_sessions, :size => 3, :maxlength => 255 %>
  </div>
  <div class="field">
    <%= f.label :weight, "Experiment weight:" %><br />
    <%= f.text_field :weight, :size => 3, :maxlength => 255 %>
  </div>
  <div class="field">
    <%= f.label :available, "Available:" %><br />
    <%= f.check_box :available %>
  </div>
  <div class="field">
    <%= f.label :double_booked, "Allow double booked?:" %><br />
    <%= f.check_box :double_booked %>
  </div>
  <div class="field">
    <%= f.label :comments, "Comment (Optional):" %><br />
    <%= f.text_area :comments, :rows => 5, :columns => 30 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
